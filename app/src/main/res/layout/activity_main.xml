<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_browse_fragment"
    android:name="com.example.emily.weatherapp.MainFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    tools:deviceIds="tv"
    tools:ignore="MergeRootFrame">


    <TextView
        android:text="City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" android:layout_marginEnd="20dp"
        android:id="@+id/cityTextView" android:textColor="@android:color/black"
        android:textStyle="normal|bold"/>
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/dateTextView"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" android:id="@+id/tempTextView" android:textSize="120sp"
        android:textColor="@android:color/black"/>
    <TextView
        android:text="Â°F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/tempTextView" android:layout_toRightOf="@+id/tempTextView"
        android:layout_toEndOf="@+id/tempTextView" android:textSize="30sp"
        android:textColor="@android:color/black"/>
    <ImageView
        android:layout_height="100dp"
        android:id="@+id/weatherImageView" android:layout_alignTop="@+id/tempTextView"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/icon_brokenclouds" android:layout_width="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date" android:id="@+id/dateTextView" android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:textColor="@android:color/black"/>
    <TextView
        android:text="Weather Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp" android:id="@+id/weatherDesctextView" android:textSize="18sp"
        android:layout_below="@+id/tempTextView" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:textColor="@android:color/black"
        android:textStyle="normal|italic"/>
</RelativeLayout>